<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @{
        ViewBag.title = "Dashboard - Road to Resilience";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!-- Font awesome -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Main style sheet -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/LandingPage.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href=~/Content/fontMontserrat.css rel='stylesheet' type='text/css'>
    <link href=~/Content/fontRoboto.css rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="landing-background">
        <div class="ask">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <br />
                <h2>What do you want to do?</h2>
            </div>
            <button class="button1">
                @Html.ActionLink("View goals and tasks", "MentorView", "Goals", new { id = ViewBag.id }, null)
            </button>
            <button class="button2">
                @Html.ActionLink("View diary entries", "ViewUser", "DiaryEntries", new { id = ViewBag.id }, null)
            </button>
            <button class="button3">
                @Html.ActionLink("View Progress", "Progress", "Options", new { id = ViewBag.id }, null)
            </button>
        </div>

    </div>

    <!-- jQuery library -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/Dashboard.js"></script>
    <!-- Custom js -->
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/choice.js"></script>
</body>
</html>