<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/all.css" rel="stylesheet">
    
    <style>
        .breadcrumbs{
            margin: auto;
            font-family: Helvetica;
            background: #000000;
        }
        .crumbs {
            background-color: #000000;
        }
        .crumbs ul {
            list-style: none;
            display: inline-table;
        }
        .crumbs ul li {
            display: block;
            float: left;
            height: 40px;
            background: #8093A7;
            text-align: center;
            padding: 15px 10px 0 30px;
            position: relative;
            margin: 0 5px 0 0;
            font-size: 15px;
            text-decoration: none;
            color: #ffffff;
            padding-right: 30px;
        }
        .crumbs ul li:after {
            content: "";
            border-top: 20px solid transparent;
            border-bottom: 20px solid transparent;
            border-left: 20px solid #8093A7;
            position: absolute;
            right: -20px;
            top: 0;
            z-index: 1;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
}
        .crumbs ul li:before {
            content: "";
            border-top: 20px solid transparent;
            border-bottom: 20px solid transparent;
            border-left: 20px solid #00ffff;
            position: absolute;
            left: 0;
            top: 0;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }
        .crumbs ul li:hover {
        background: #357DFD;
        color: #fff;
        }

        .crumbs ul li:hover:after {
        border-left-color: #357DFD;
        color: #fff;
        }
    </style>
</head>
<body>

    <!-- Start menu -->
    <section id="mu-menu">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- LOGO -->
                    <!-- TEXT BASED LOGO -->
                    <h3>Building Resilience</h3>
                    <!-- IMG BASED LOGO  -->
                    <!-- <a class="navbar-brand" href="index.html"><img src="assets/img/logo.png" alt="logo"></a> -->
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Why resilience?", "Index", "Home", null, null, "mu-about-us", null, null)</li>
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>
    </section>
    <!-- End menu -->

    <div class="breadcrumbs">
        <div class="crumbs">
            <ul>
                <li>
                    You are Here: @Html.MvcSiteMap().SiteMapPath()
                </li>
            </ul>          
        </div>
    </div>
    @RenderBody()
    <!-- Start footer -->
    <footer id="mu-footer">        
        <div class="mu-footer-bottom">
            <div class="container">
                <div class="mu-footer-bottom-area">
                    <p>&copy; @DateTime.Now.Year - All Rights Reserved - Innovatech</p>
                </div>
            </div>
        </div>
        <!-- end footer bottom -->
    </footer>
    <!-- End footer -->
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/validate-entry.js"></script>
</body>
</html>