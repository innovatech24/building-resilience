@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Customize Error Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Font awesome -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- Slick slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/slick.css">
    <!-- Fancybox slider -->
    <link rel="stylesheet" href="~/Content/jquery.fancybox.css" type="text/css" media="screen" />
    <!-- Theme color -->
    <link id="switcher" href="~/Content/default-theme.css" rel="stylesheet">

    <!-- Main style sheet -->
    <link href="~/Content/style.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,700' rel='stylesheet' type='text/css'>
    <style>
        html, body {
            height: 100%;
            width: 100%;
        }
        .error-background {
            height: 100%;
            width: 100%;
            background: url('../../Images/anime-art-artistic-262272.jpg') no-repeat center;
            background-size: cover;
        }
        .error-ask {
            position: absolute;
            top: 30%;
            left: 30%;
            color: orangered;
            @*box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
            *@
        }
    .button {
    border: none;
    text-align: center;
    text-transform: uppercase;
    text-decoration: none;
    display: inline-block;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }
    .button1 {
    width: 20%;
    height: 10%;
    background-color: transparent;
    color: white;
    border: 2px solid black;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    border-radius: 12px;
    position: absolute;
    top: 60%;
    left: 30%;
    }


    .button1:hover {
    background-color: white;
    color: black;
    }
    </style>
</head>
<body>
    <div class="error-background">
        <div class="error-ask">
            <div class="col-lg-10 col-md-10 col-sm-10">
                <h1>
                    Oops!
                </h1>
                <br />
                <h3>
                    Sorry, Something Gone Wrong.
                </h3>
            </div>
        </div>
            <button class="button1">
                @Html.ActionLink("Back to home page", "Index", "Home") @*link name , action method name , controller name*@
            </button>

        </div>
    <script src="~/Scripts/choice.js"></script>
</body>
</html>

