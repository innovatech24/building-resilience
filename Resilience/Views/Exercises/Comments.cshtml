@model Resilience.Models.Exercise

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @{
        ViewBag.title = "Comments - Building Resilience";
    }

    <!-- Font awesome -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- Slick slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/slick.css">
    <!-- Fancybox slider -->
    <link rel="stylesheet" href="~/Content/jquery.fancybox.css" type="text/css" media="screen" />
    <!-- Theme color -->
    <link id="switcher" href="~/Content/default-theme.css" rel="stylesheet">
    <!-- Highlighter function -->
    <link rel="stylesheet" href="~/Content/jquery.highlight-within-textarea.css" />
    <!-- Main style sheet -->
    <link href="~/Content/style.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,700' rel='stylesheet' type='text/css'>

    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <style>
        html, body {
            height: 100%;
            width: 100%;
        }
        .comments-background {
            height: 100%;
            width: 100%;
            background: url('../../Images/art-artist-black-and-white-265047.jpg') no-repeat center;
            background-size: cover;
        }
        .col-md-11 {
            background-color: transparent;
            width: 85%;
            height: 70%;
            padding: 3% 0 0;
            margin: auto;
            text-align: center;
            @*box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
            *@
        }
        .multi-line {
            max-width: 80%;
        }
    </style>
    <script type="text/javascript">
        var message = "@TempData["UserMessage"]";
        var iid = @Model.Goal.Id;
    </script>
</head>
<body>

    <div class="comments-background">

        <div class="col-md-offset-1 col-md-11">
            <h2>Provide comments</h2>
            <hr />
            @*<div class="form-group">
                    @Html.LabelFor(model => model.Entry, htmlAttributes: new { @class = "control-label col-md-2" })
                    <label class="control-label col-md-2">Diary</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", rows = "8" } })
                        <hr />
                    </div>
                </div>*@

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-md-offset-1 form-horizontal">
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-9">
                            <div id="SubmitMessage" style="width:100%;" class="alert" hidden>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.HiddenFor(model => model.Id)
                        <label class="control-label col-md-2">Comments</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MenteeComments, new { htmlAttributes = new { @class = "form-control", @rows = "20" } })
                            @Html.ValidationMessageFor(model => model.MenteeComments, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-9">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            @*<div>
                    @Html.ActionLink("Back to List", "Index")
                </div>*@
        </div>
    </div>

    <!-- jQuery library -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Slick slider -->
    <script type="text/javascript" src="~/Scripts/slick.js"></script>
    <!-- Counter -->
    <script type="text/javascript" src="~/Scripts/waypoints.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.counterup.js"></script>
    <!-- Mixit slider -->
    <script type="text/javascript" src="~/Scripts/jquery.mixitup.js"></script>
    <!-- Add fancyBox -->
    <script type="text/javascript" src="~/Scripts/jquery.fancybox.pack.js"></script>
    <script src="~/Scripts/jqueryd.min.js"></script>
    <!-- AM CHARTS-->
    <script type="text/javascript" src="~/Scripts/AMcharts/core.js"></script>
    <script type="text/javascript" src="~/Scripts/AMcharts/charts.js"></script>
    <script type="text/javascript" src="~/Scripts/AMcharts/animated.js"></script>
    <script type="text/javascript" src="~/Scripts/AMcharts/kelly.js"></script>
    <!-- HIGHLIGHTING TEXT-->
    <script type="text/javascript" src="~/Scripts/jquery.highlight-within-textarea.js"></script>
    <!-- Custom js -->
    <script type="text/javascript" src="~/Scripts/Additional_functions.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/ExercisesComments.js"></script>

</body>
</html>