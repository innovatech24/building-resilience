@model IEnumerable<Resilience.Models.DiaryEntries>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @{
        ViewBag.title = "View Feedback - Building Resilience";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!-- Font awesome -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- Slick slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/slick.css">
    <!-- Fancybox slider -->
    <link rel="stylesheet" href="~/Content/jquery.fancybox.css" type="text/css" media="screen" />
    <!-- Theme color -->
    <link id="switcher" href="~/Content/default-theme.css" rel="stylesheet">

    <!-- Main style sheet -->
    <link href="~/Content/style.css" rel="stylesheet">


    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,700' rel='stylesheet' type='text/css'>
    <style>
        .view-feedback {
            height: 1000px;
            background: url('../../Images/atmosphere-background-bright-19670.jpg') no-repeat center;
            background-size: cover;
        }

        @*.long-textbox {*@
            height: 350px;
            width: 750px;
            white-space: pre-wrap;
        }

        input, select, textarea {
            max-width: 100%;
        }
    </style>
</head>
<body>
    <div class="view-feedback">
        <h2>View Feedback</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Entry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MentorFeedback)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenteeFeedback)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @*@Html.TextBoxFor(modelItem => item.Entry, new { @class = "entry", @readonly = "readonly" })*@
                        <textarea class="entry" rows=15 cols=100 readonly="readonly">@item.Entry</textarea>
                    </td>
                    @if (item.MentorFeedback == null)
                    {
                        <td>
                            <text>
                                Your mentor hasn't given feedback yet.
                            </text>
                        </td>
                    }
                    else
                    {
                        <td>
                            @*@Html.DisplayFor(modelItem => item.MentorFeedback)*@
                            <textarea class="feedback" rows=15 cols=100>@item.MentorFeedback</textarea>
                        </td>
                    }
                    @if (item.MentorFeedback == null)
                    {
                        <td>
                            <text>
                                There is no feedback to be rated yet.
                            </text>
                        </td>
                    }
                    else if (item.MenteeFeedback == null)
                    {
                        <td>
                            <text>
                                Rate your mentor's feedback.
                            </text>
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.MenteeFeedback)
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
        <!-- jQuery library -->
        <script src="~/Scripts/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="~/Scripts/bootstrap.js"></script>
        <!-- Slick slider -->
        <script type="text/javascript" src="~/Scripts/slick.js"></script>
        <!-- Counter -->
        <script type="text/javascript" src="~/Scripts/waypoints.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.counterup.js"></script>
        <!-- Mixit slider -->
        <script type="text/javascript" src="~/Scripts/jquery.mixitup.js"></script>
        <!-- Add fancyBox -->
        <script type="text/javascript" src="~/Scripts/jquery.fancybox.pack.js"></script>
        <script src="~/Scripts/jqueryd.min.js"></script>
        <!-- AM CHARTS-->
        <script type="text/javascript" src="~/Scripts/AMcharts/core.js"></script>
        <script type="text/javascript" src="~/Scripts/AMcharts/charts.js"></script>
        <script type="text/javascript" src="~/Scripts/AMcharts/animated.js"></script>
        <script type="text/javascript" src="~/Scripts/AMcharts/kelly.js"></script>
        <script src="~/Scripts/custom.js"></script>
</body>
</html>


